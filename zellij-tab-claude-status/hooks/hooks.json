{
  "description": "Zellij tab status indicator hooks",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [{"type": "command", "command": "zellij-tab-status '◉'"}]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [{"type": "command", "command": "zellij-tab-status '○'"}]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [{"type": "command", "command": "zellij-tab-status '○'"}]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [{"type": "command", "command": "zellij-tab-status '◉'"}]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|elicitation_dialog",
        "hooks": [{"type": "command", "command": "zellij-tab-status '✋'"}]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [{"type": "command", "command": "zellij-tab-status '○'"}]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [{"type": "command", "command": "zellij-tab-status '○'"}]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [{"type": "command", "command": "zellij-tab-status --clear"}]
      }
    ]
  }
}
